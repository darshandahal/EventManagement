<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagement.LoginPage"
             Title="Login">
    <StackLayout Padding="30" Spacing="20">
        <Label Text="EventManagement Created by Darshan Dahal" FontSize="34" HorizontalOptions="Center" />
        <Label Text="Welcome Back to EventManagement." FontSize="24" HorizontalOptions="Center" />
        <Label Text="Login" FontSize="26" HorizontalOptions="Center" />
        <Label Text="(Note: While Login, the username should be 'admin' and Password: 'password' ) otherwise this will show error login. " FontSize="14" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
