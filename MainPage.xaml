<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagement.MainPage"
             Title="Event Manager">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Event Manager" FontSize="24" HorizontalOptions="Center" />
        <ListView x:Name="EventsList" ItemsSource="{Binding Events}" />
        <Entry x:Name="NewEventEntry" Placeholder="Add a new event" />
        <Button Text="Add Event" Clicked="OnAddEventClicked" />
        <Entry x:Name="EditEventEntry" Placeholder="Edit selected event" />
        <Button Text="Edit Event" Clicked="OnEditEventClicked" />
    </StackLayout>
</ContentPage>

